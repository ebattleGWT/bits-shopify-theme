<div class="hero-banner hero-banner--{{ section.settings.height }} text-{{ section.settings.text_alignment }}" 
     style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="page-width">
    <div class="hero-banner__grid">
      <div class="hero-banner__content">
        {%- if section.settings.heading != blank -%}
          <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="hero-banner__text">{{ section.settings.text }}</div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="hero-banner__button button">
            {{ section.settings.button_label }}
            <span class="hero-banner__button-icon">â–¶</span>
          </a>
        {%- endif -%}
      </div>

      <div class="hero-banner__image">
        <div class="hero-banner__platform">
          {%- if section.settings.hero_image != blank -%}
            <img 
              src="{{ section.settings.hero_image | img_url: 'master' }}"
              alt="{{ section.settings.heading | escape }}"
              class="hero-banner__product-showcase"
              loading="eager"
              width="{{ section.settings.image_width }}"
              height="auto">
          {%- elsif section.settings.featured_products != blank -%}
            {%- assign first_product = section.settings.featured_products.first -%}
            {%- if first_product.featured_image -%}
              <img 
                src="{{ first_product.featured_image | img_url: 'large' }}"
                alt="{{ first_product.title }}"
                class="hero-banner__product-showcase"
                loading="eager"
                width="500"
                height="500">
            {%- endif -%}
          {%- endif -%}
        </div>
      </div>
    </div>

    {%- if section.settings.featured_products != blank -%}
      <div class="hero-banner__products">
        <div class="hero-banner__products-header">
          <h2 class="hero-banner__products-title">
            {{ section.settings.products_heading }}
            <span class="hero-banner__products-subtitle">{{ section.settings.products_subheading }}</span>
          </h2>
        </div>

        <div class="hero-banner__product-grid">
          {%- for product in section.settings.featured_products -%}
            <a href="{{ product.url }}" class="hero-banner__product">
              {%- if product.featured_image -%}
                <div class="hero-banner__product-image-wrapper">
                  <img 
                    src="{{ product.featured_image | img_url: 'medium' }}"
                    alt="{{ product.title }}"
                    class="hero-banner__product-image"
                    loading="lazy"
                    width="200"
                    height="200">
                </div>
              {%- endif -%}
              <h3 class="hero-banner__product-title">{{ product.title }}</h3>
              <div class="hero-banner__product-price">{{ product.price | money }}</div>
            </a>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Natural Beauty Solutions"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text content",
      "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "View Catalog"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Hero Image"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image",
      "info": "Recommended: Product group image like the sunscreen bottles"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Image width",
      "default": 500
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#FFD699"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    },
    {
      "type": "header",
      "content": "Featured Products"
    },
    {
      "type": "product_list",
      "id": "featured_products",
      "label": "Featured products",
      "limit": 3
    },
    {
      "type": "text",
      "id": "products_heading",
      "label": "Products section heading",
      "default": "NEW"
    },
    {
      "type": "text",
      "id": "products_subheading",
      "label": "Products section subheading",
      "default": "PRODUCTS"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Hero"
    }
  ]
}
{% endschema %}

<style>
.hero-banner {
  position: relative;
  padding: 80px 0;
  overflow: hidden;
}

.hero-banner--small {
  min-height: 400px;
}

.hero-banner--medium {
  min-height: 550px;
}

.hero-banner--large {
  min-height: 700px;
}

.page-width {
  max-width: var(--page-width);
  margin: 0 auto;
  padding: 0 1.5rem;
}

.hero-banner__grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.hero-banner__content {
  max-width: 600px;
}

.text-center .hero-banner__content {
  margin: 0 auto;
  text-align: center;
}

.text-right .hero-banner__content {
  margin-left: auto;
  text-align: right;
}

.hero-banner__heading {
  font-size: clamp(2.5rem, 5vw, 4rem);
  line-height: 1.1;
  margin: 0 0 1.5rem;
  font-weight: 500;
}

.hero-banner__text {
  font-size: clamp(1rem, 1.2vw, 1.125rem);
  line-height: 1.6;
  margin: 0 0 2rem;
}

.hero-banner__button {
  display: inline-flex;
  align-items: center;
  padding: 1rem 2rem;
  background: #000000;
  color: #ffffff;
  text-decoration: none;
  border-radius: 4px;
  font-weight: 500;
  transition: opacity 0.3s ease;
}

.hero-banner__button:hover {
  opacity: 0.9;
}

.hero-banner__button-icon {
  margin-left: 0.75rem;
  font-size: 0.875rem;
}

.hero-banner__image {
  position: relative;
}

.hero-banner__platform {
  width: 100%;
  aspect-ratio: 1;
  background: linear-gradient(to bottom, rgba(255,255,255,0.8), rgba(255,255,255,0.3));
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding-bottom: 2rem;
  position: relative;
  overflow: hidden;
}

.hero-banner__product-showcase {
  max-width: 90%;
  height: auto;
  object-fit: contain;
  position: relative;
  z-index: 2;
  transform: translateY(5%);
}

.hero-banner__products {
  margin-top: 5rem;
}

.hero-banner__products-header {
  margin-bottom: 2rem;
}

.hero-banner__products-title {
  font-size: 2rem;
  font-weight: 500;
  margin: 0;
  display: flex;
  align-items: baseline;
  gap: 1rem;
}

.hero-banner__products-subtitle {
  font-size: 3rem;
  font-weight: 300;
  opacity: 0.3;
}

.hero-banner__product-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
}

.hero-banner__product {
  background: #ffffff;
  border-radius: 20px;
  padding: 2rem;
  text-align: center;
  text-decoration: none;
  color: inherit;
  transition: transform 0.3s ease;
}

.hero-banner__product:hover {
  transform: translateY(-5px);
}

.hero-banner__product-image-wrapper {
  margin-bottom: 1.5rem;
}

.hero-banner__product-image {
  width: 100%;
  height: auto;
  border-radius: 10px;
}

.hero-banner__product-title {
  font-size: 1.125rem;
  font-weight: 500;
  margin: 0 0 0.5rem;
}

.hero-banner__product-price {
  font-size: 1.25rem;
  font-weight: 600;
}

@media screen and (max-width: 989px) {
  .hero-banner__grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .hero-banner__content {
    text-align: center;
    margin: 0 auto;
  }

  .hero-banner__product-grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
}

@media screen and (max-width: 749px) {
  .hero-banner {
    padding: 4rem 0;
  }

  .hero-banner__products-title {
    font-size: 1.5rem;
  }

  .hero-banner__products-subtitle {
    font-size: 2rem;
  }

  .hero-banner__product {
    padding: 1.5rem;
  }
}
</style>
