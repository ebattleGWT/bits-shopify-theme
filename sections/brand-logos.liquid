{% schema %}
{
  "name": "Brand Logos",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our high-level partners"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We cooperate with top partners and provide access to over 1m properties in 180 countries."
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#F8F8F8"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 80,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Logo Maximum Width",
      "default": 150
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 3,
      "max": 6,
      "step": 1,
      "label": "Logos Per Row (Desktop)",
      "default": 4
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 3,
      "step": 1,
      "label": "Logos Per Row (Mobile)",
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Brand Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (Optional)"
        },
        {
          "type": "text",
          "id": "brand_name",
          "label": "Brand Name (for accessibility)",
          "default": "Brand Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Logos",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="brand-logos" style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    <div class="brand-logos__header">
      {% if section.settings.heading != blank %}
        <div class="brand-logos__icon">
          {% if settings.logo != blank %}
            <img src="{{ settings.logo | img_url: '100x' }}"
                 alt="{{ shop.name }}"
                 width="40"
                 height="40"
                 loading="lazy">
          {% endif %}
        </div>
        <h2 class="brand-logos__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="brand-logos__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    {% if section.blocks.size > 0 %}
      <div class="brand-logos__grid"
           style="--logo-max-width: {{ section.settings.logo_max_width }}px;
                  --columns-desktop: {{ section.settings.columns_desktop }};
                  --columns-mobile: {{ section.settings.columns_mobile }};">
        {% for block in section.blocks %}
          <div class="brand-logos__item" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="brand-logos__link">
            {% endif %}
              
            {% if block.settings.logo != blank %}
              <img src="{{ block.settings.logo | img_url: 'master' }}"
                   alt="{{ block.settings.brand_name }}"
                   class="brand-logos__image"
                   width="{{ section.settings.logo_max_width }}"
                   height="auto"
                   loading="lazy">
            {% endif %}

            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<style>
.brand-logos {
  padding: var(--section-padding) 0;
}

.page-width {
  max-width: var(--page-width);
  margin: 0 auto;
  padding: 0 1.5rem;
}

.brand-logos__header {
  max-width: 600px;
  margin: 0 0 4rem;
  position: relative;
}

.brand-logos__icon {
  margin-bottom: 1.5rem;
}

.brand-logos__icon img {
  width: 40px;
  height: 40px;
  object-fit: contain;
}

.brand-logos__heading {
  font-size: clamp(2rem, 4vw, 3.5rem);
  line-height: 1.1;
  margin: 0 0 1rem;
  font-weight: 600;
}

.brand-logos__description {
  font-size: clamp(1rem, 1.2vw, 1.125rem);
  line-height: 1.6;
  color: #666;
  margin: 0;
}

.brand-logos__grid {
  display: grid;
  grid-template-columns: repeat(var(--columns-desktop), 1fr);
  gap: 2rem;
  align-items: center;
}

.brand-logos__item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 1.5rem;
  background: #fff;
  border-radius: 0.5rem;
  transition: transform 0.3s ease;
}

.brand-logos__item:hover {
  transform: translateY(-5px);
}

.brand-logos__image {
  max-width: var(--logo-max-width);
  width: 100%;
  height: auto;
  object-fit: contain;
  opacity: 0.8;
  transition: opacity 0.3s ease;
}

.brand-logos__item:hover .brand-logos__image {
  opacity: 1;
}

@media screen and (max-width: 989px) {
  .brand-logos__header {
    margin-bottom: 3rem;
  }
}

@media screen and (max-width: 749px) {
  .brand-logos__grid {
    grid-template-columns: repeat(var(--columns-mobile), 1fr);
    gap: 1rem;
  }

  .brand-logos__item {
    padding: 1rem;
  }
}
</style> 